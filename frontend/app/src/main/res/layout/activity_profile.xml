<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_extra_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Шапка профиля -->
        <LinearLayout
            android:id="@+id/cardProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_profile_header"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Василий П."
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fhhafk@gmail.com"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Заголовок категорий -->
        <TextView
            android:id="@+id/tvCategoriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваши Категории"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Карточка списка категорий -->
        <LinearLayout
            android:id="@+id/categoriesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_categories_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/categoriesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbCatActive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Активные приключения"
                    android:textColor="@color/text_on_teal"
                    android:textSize="14sp"
                    android:buttonTint="@color/white"
                    android:paddingVertical="4dp" />

                <CheckBox
                    android:id="@+id/cbCatShopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Место для шоппинга"
                    android:textColor="@color/text_on_teal"
                    android:textSize="14sp"
                    android:buttonTint="@color/white"
                    android:paddingVertical="4dp" />

                <CheckBox
                    android:id="@+id/cbCatHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="История, культура"
                    android:textColor="@color/text_on_teal"
                    android:textSize="14sp"
                    android:buttonTint="@color/white"
                    android:paddingVertical="4dp" />

                <CheckBox
                    android:id="@+id/cbCatFun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Досуг и развлечения"
                    android:textColor="@color/text_on_teal"
                    android:textSize="14sp"
                    android:buttonTint="@color/white"
                    android:paddingVertical="4dp" />

                <CheckBox
                    android:id="@+id/cbCatNature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Природа и свежий воздух"
                    android:textColor="@color/text_on_teal"
                    android:textSize="14sp"
                    android:buttonTint="@color/white"
                    android:paddingVertical="4dp" />

                <CheckBox
                    android:id="@+id/cbCatResorts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Курорты и здоровый отдых"
                    android:textColor="@color/text_on_teal"
                    android:textSize="14sp"
                    android:buttonTint="@color/white"
                    android:paddingVertical="4dp" />

                <CheckBox
                    android:id="@+id/cbCatHidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Необычные и скрытые уголки города"
                    android:textColor="@color/text_on_teal"
                    android:textSize="14sp"
                    android:buttonTint="@color/white"
                    android:paddingVertical="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Заголовок маршрутов -->
        <TextView
            android:id="@+id/tvRoutesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваши Маршруты"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Заглушка для списка маршрутов -->
        <TextView
            android:id="@+id/tvRoutesEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="У вас пока нет сохранённых маршрутов."
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/bg_profile_card"
            android:layout_marginBottom="24dp" />

        <!-- Управляющие кнопки -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выйти из аккаунта"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnGoHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вернуться в главное меню"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
