<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- Иллюстрация -->
    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/main_illustration"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/travel_illustration" />

    <!-- Карточка с регистрацией -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#5EABB1"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Заголовок -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Путешествуй с нами"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="24dp"/>

            <!-- Кнопка Google Sign-In -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue with Google"
                android:textColor="#3C4043"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:icon="@drawable/ic_google"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@null"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="28dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
