<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5EABB1"
    android:padding="24dp">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Где вы любите отдыхать и открывать новое?"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="32dp"/>

    <!-- Чипы категорий -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:singleSelection="false"
        app:chipSpacingHorizontal="12dp"
        app:chipSpacingVertical="12dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNature"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Природа и свежий воздух"
            android:textColor="#2C5F61"
            android:textSize="16sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeWidth="0dp"
            app:chipCornerRadius="24dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAdventure"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Активные приключения"
            android:textColor="#2C5F61"
            android:textSize="16sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeWidth="0dp"
            app:chipCornerRadius="24dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipWellness"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Курорты и здоровый отдых"
            android:textColor="#2C5F61"
            android:textSize="16sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeWidth="0dp"
            app:chipCornerRadius="24dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEntertainment"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Досуг и развлечения"
            android:textColor="#2C5F61"
            android:textSize="16sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeWidth="0dp"
            app:chipCornerRadius="24dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCulture"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="История, культура"
            android:textColor="#2C5F61"
            android:textSize="16sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeWidth="0dp"
            app:chipCornerRadius="24dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipShopping"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Места для шопинга"
            android:textColor="#2C5F61"
            android:textSize="16sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeWidth="0dp"
            app:chipCornerRadius="24dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHidden"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Необычные и скрытые уголки города"
            android:textColor="#2C5F61"
            android:textSize="16sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeWidth="0dp"
            app:chipCornerRadius="24dp"/>

    </com.google.android.material.chip.ChipGroup>

    <!-- Кнопка продолжить -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Продолжить"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:icon="@drawable/ic_arrow_forward"
        app:iconGravity="end"
        app:iconTint="#FFFFFF"
        app:backgroundTint="#3D8084"
        app:cornerRadius="32dp"
        android:layout_marginTop="16dp"/>

</LinearLayout>
